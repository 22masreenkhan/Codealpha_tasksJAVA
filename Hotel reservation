import java.util.ArrayList;
import java.util.Scanner;

// Hotel Reservation System
class HotelReservationSystem {
    private static final int TOTAL_ROOMS = 10;
    private static final ArrayList<Integer> bookedRooms = new ArrayList<>();

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        while (true) {
            System.out.println("\nüè® Hotel Reservation System üè®");
            System.out.println("1. View Available Rooms");
            System.out.println("2. Book a Room");
            System.out.println("3. Cancel Booking");
            System.out.println("4. Exit");
            System.out.print("Choose an option: ");

            int choice = scanner.nextInt();
            switch (choice) {
                case 1:
                    viewAvailableRooms();
                    break;
                case 2:
                    bookRoom(scanner);
                    break;
                case 3:
                    cancelBooking(scanner);
                    break;
                case 4:
                    System.out.println("Thank you for using the Hotel Reservation System. Goodbye! üòä");
                    scanner.close();
                    return;
                default:
                    System.out.println("‚ùå Invalid choice! Please select a valid option.");
            }
        }
    }

    // Display Available Rooms
    private static void viewAvailableRooms() {
        System.out.println("\n‚úÖ Available Rooms:");
        boolean allBooked = true;
        for (int i = 1; i <= TOTAL_ROOMS; i++) {
            if (!bookedRooms.contains(i)) {
                System.out.print("Room " + i + " | ");
                allBooked = false;
            }
        }
        if (allBooked) {
            System.out.println("‚ùå No rooms available.");
        } else {
            System.out.println("\n");
        }
    }

    // Book a Room
    private static void bookRoom(Scanner scanner) {
        System.out.print("\nEnter Room Number (1-" + TOTAL_ROOMS + ") to book: ");
        int roomNumber = scanner.nextInt();

        if (roomNumber < 1 || roomNumber > TOTAL_ROOMS) {
            System.out.println("‚ùå Invalid Room Number! Choose between 1-" + TOTAL_ROOMS);
        } else if (bookedRooms.contains(roomNumber)) {
            System.out.println("‚ö†Ô∏è Room " + roomNumber + " is already booked.");
        } else {
            bookedRooms.add(roomNumber);
            System.out.println("‚úÖ Room " + roomNumber + " booked successfully!");
        }
    }

    // Cancel a Booking
    private static void cancelBooking(Scanner scanner) {
        System.out.print("\nEnter Room Number to cancel booking: ");
        int roomNumber = scanner.nextInt();

        if (bookedRooms.contains(roomNumber)) {
            bookedRooms.remove(Integer.valueOf(roomNumber));
            System.out.println("‚úÖ Room " + roomNumber + " booking canceled.");
        } else {
            System.out.println("‚ùå Room " + roomNumber + " is not booked.");
        }
    }
}
